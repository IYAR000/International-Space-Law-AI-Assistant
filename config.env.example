# Database Configuration
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=space_law_db
DB_USER=space_law_user
DB_PASSWORD=your_secure_password
SQLITE_PATH=space_law.db

# API Configuration
DATA_COLLECTION_API_PORT=8001
LEGAL_ANALYSIS_API_PORT=8002

# Security
API_SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# External Services
REDIS_URL=redis://localhost:6379

# Cloud Platform Configuration (set these based on your chosen platform)
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Azure
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key

# Google Cloud
GOOGLE_CLOUD_PROJECT=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/credentials.json

# Kubernetes
KUBERNETES_NAMESPACE=space-law-ai
KUBERNETES_CLUSTER=your_cluster_name
